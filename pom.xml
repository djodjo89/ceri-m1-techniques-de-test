              <devDependencies>
                <prettier>2.0.5</prettier>
                <prettier-plugin-java>2.1.0</prettier-plugin-java>
              </devDependencies>
              <config>
                <parser>java</parser>
                <printWidth>80</printWidth>
              </config>
            </prettier>
            <importOrder />
            <removeUnusedImports />
